pipeline {
    agent any
    tools{
        maven 'Maven'
    }
    stages{
        stage('Build Maven'){
            steps{
                git branch: 'main', url: 'https://github.com/Niravbhatt2006/devops-automation.git'
            }
        }
        stage('BUILD'){
            steps{
                sh 'mvn clean install'
           }
       }
                
        stage('Build docker image'){
            steps{
                script{
                    sh 'docker build -t docker-nexus-repo/devops-integration:latest .'
                }
            }
        }
        stage('Push image to Hub'){
            steps{
                script{
                   // This step should not normally be used in your script. Consult the inline help for details.
                    withDockerRegistry(credentialsId: 'Nexus_Cred', url: 'http://54.160.119.190:8083/repository/docker-nexus-repo/') {
                        docker.image('docker-nexus-repo/devops-integration:latest').push()     
                   }
                }
            }
        }
     }
 }    
